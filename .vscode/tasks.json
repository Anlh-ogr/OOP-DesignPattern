{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ file",
            "type": "shell",
            "command": "/usr/bin/g++",              // path to g++ compiler
            "args": [
                "-std=c++20",                       // C++ standard
                "-O2",                              // tối ưu hiệu năng
                "-march=native",                    // tối ưu cho kiến trúc CPU hiện tại\
                "-pipe",                            // tăng tốc biên dịch (bằng cách sử dụng ống dẫn nội bộ thay vì tệp tạm thời)
                "-Wall", "-Wextra", "-Wpedantic",   // bật tất cả cảnh báo quan trọng
                "${workspaceFolder}/**/*.cpp",
                "-o",
                "${workspaceFolder}/bin/app"        // output bin vào thư mục bin
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build all cpp file (release mode, optimized for O2)"
        },

        {
            "label": "Build C++ file and Debug",
            "type": "shell",
            "command": "/usr/bin/g++",              // path to g++ compiler
            "args": [
                "-std=c++20",                       // C++ standard
                "-g",                               // thêm thông tin debug
                "-O0",                              // không tối ưu để dễ debug
                "-march=native",                    // tối ưu cho kiến trúc CPU hiện tại
                "-pipe",                            // tăng tốc biên dịch (bằng cách sử dụng ống dẫn nội bộ thay vì tệp tạm thời)
                "-Wall", "-Wextra", "-Wpedantic",   // bật tất cả cảnh báo quan trọng
                "${workspaceFolder}/**/*.cpp",
                "-o",
                "${workspaceFolder}/bin/app_debug"   // output bin vào thư mục bin
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Build all cpp file (debug mode, O0 + g)"
        }
    ]
}
